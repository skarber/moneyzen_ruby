<p id="notice"><%= notice %></p>

<h1>Credits</h1>

<table class="features-table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Term</th>
      <th>Payment</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   
    <% @credits.each do |credit| %>
      <tr>
        <td><%= credit.amount %></td>
        <td><%= credit.term %> months</td>
        <td><%= credit.payment %></td>
        <td><%= credit.status %></td>
        <td><%= link_to 'Show', credit %></td>
        <td><%= link_to 'Edit', edit_credit_path(credit) %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<br>

		<%if !current_user.admin%>
<%= link_to 'New Credit', new_credit_path %>
		<%end%>