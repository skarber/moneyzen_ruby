<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="features-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Income</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.income %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Credits', '/credit/' + user.id.to_s %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-large btn-primary" %>
