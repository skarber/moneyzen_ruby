<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title)%></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'default', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="navbar navbar-fixed-top navbar-inverse" style="background: #e3a555;">
      <div class="navbar-inner">
        <div class="container">
		<%= link_to "MoneyZen_Ruby", '/', id: "logo" %>
          <nav>
            <ul class="nav pull-right">
              <% if signed_in? %>
              <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
              <li><%= link_to "Welcome, "+current_user.name,    '/users/'+current_user.id.to_s %></li>
			  <li><b style="padding: 10px 15px;"></b></li>
              <% else %>
              <li><%= link_to "Sign in",    '/signin' %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
	
	<style>
	.nav li
	{
	float: inherit;
	}
	</style>
</body>
</html>
